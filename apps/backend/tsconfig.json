{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@/*": ["../../packages/*"]
    }
  },
  "include": ["src", "../../packages/types/**/*.ts"],
  "exclude": ["node_modules"]
}